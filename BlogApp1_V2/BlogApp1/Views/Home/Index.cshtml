@{
    ViewData["Title"] = "Hoş Geldiniz";
}

<div class="d-flex flex-column justify-content-center align-items-center vh-100 bg-light">

    <!-- Logo Alanı -->
    <div class="text-center mb-3">
        <img src="https://img.icons8.com/ios-filled/100/000000/blog.png" alt="Logo" 
             style="width: 80px; height: 80px;" class="mb-2" />
        <h2 class="fw-bold">Blogify</h2>
    </div>

    <!-- Kart (butonlar vs.) -->
    <div class="card shadow p-4 text-center" style="min-width: 320px; max-width: 400px;">
        <h3 class="mb-3">Blog Sitemize Hoş Geldiniz</h3>
        <p class="text-muted mb-4">Devam etmek için bir yol seçin</p>

        <div class="d-grid gap-2">
            <a href="@Url.Action("Register", "Account")" class="btn btn-primary">Kayıt Ol</a>
            <a href="@Url.Action("Login", "Account")" class="btn btn-success">Giriş Yap</a>
            <a href="@Url.Action("Guest", "Home")" class="btn btn-secondary">Misafir Olarak Devam Et</a>
        </div>
    </div>
</div>
